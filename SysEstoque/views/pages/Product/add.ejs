
<!--Descrição, Marca, modelo, Número de série-->
<form action="/product/add" method="post">    
    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <input type="text" name="descricao" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="description">Marca:</label>
        <input type="text" name="description" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="model">Modelo:</label>
        <input type="text" name="model" class="form-control">
    </div>

    <div class="form-group">
        <label for="serial number">Número de sério:</label>
        <input type="text" name="serial number" class="form-control" required>
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-success">
    <a href="/product/list" class="btn btn-danger">Cancelar</a>
</form>