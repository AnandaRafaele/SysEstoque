<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/list">Usuários</a>
    </li>
    <li class="breadcrumb-item">Alterar</li>
</ol>

<h1 class="display-4">Alteração de Usuários</h1>

<form action="/update/<%= user.id%>" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" class="form-control" value="<%= user.name%>">
    </div>

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" name="email" class="form-control" value="<%= user.email%>">
    </div>

    <div class="form-group">
        <label for="phoneNumber">Telefone:</label>
        <input type="text" name="phoneNumber" class="form-control" value="<%= user.phoneNumber%>">
    </div>

    <div class="form-group">
        <label for="password">Senha:</label>
        <input type="password" name="password" class="form-control" value="<%= user.password%>">
    </div>

    <div class="form-group">
        
        <select>
            <option selected=""> Selecione  </option>
                <option value="<%= user.isActive%>">Ativo</option>
                <option name="isActive" value="<%= user.isActive%>">false</option>
           
            </select>
        <input type="text" name="isActive" class="form-control" value="<%= user.isActive%>">
    </div>

    <input type="submit" value="Alterar" class="btn btn-success mt-4">
    <a href="/list" class="btn btn-danger mt-4">Cancelar</a>
</form>